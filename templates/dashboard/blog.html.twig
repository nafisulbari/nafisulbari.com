{% extends 'base.html.twig' %}

{% block body %}

    <h1>My blogs</h1>

    <h2>Categories</h2>



    <h2>Blogs with category XXX</h2>
    {% for  blog in blogs %}
        <ul>
            <li> {{ blog.id }}</li>

            <li><a href="/dashboard/category/blog/post/{{ blog.id }}">{{ blog.title }}</a></li>
            <button><a href="/blog/{{ blog.id }}-{{ blog.title }}" target="_blank">preview</a></button>
            <button><a href="/dashboard/category/blog/post/edit/{{ blog.id }}">edit</a></button>
            <button class="btn btn-danger"><a href="/dashboard/category/blog/post/delete/{{ blog.id }}" onclick="return confirm('Are you sure you want to delete this blog?');">delete</a></button>

        </ul>
    {% endfor %}








{% endblock %}


