{% extends 'base.html.twig' %}

{% block body %}



    <h2>Categories</h2>
    <ul>
        {% for  cat in cats %}
            <li> {{ cat.name }}</li>
            </br>
        {% endfor %}
    </ul>


    <h2>{{selectedCat}} Blogs </h2>
    {% for  blog in blogs %}
        <ul>
            <li> {{ blog.id }}</li>

            <li><a href="/blog/{{ blog.id }}-{{ blog.title }}">{{ blog.title }}</a></li>
            <li> {{ blog.article |slice(0, 80) |raw ~ '...'}}</li>
        </ul>
    {% endfor %}




    <div class="navigation">
        {{ knp_pagination_render(blogs) }}
    </div>
{% endblock %}


