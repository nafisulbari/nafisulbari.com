{% extends 'base.html.twig' %}

{% block title %}{{ blogpost.title }} - Nafisul Bari's Blog{% endblock %}





{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        {{ blogpost.id }}



        <h1> {{ blogpost.title }}</h1>
        <p> {{ blogpost.category.name }}</p>
        <p> {{ blogpost.dateCreated }}</p>

        <p> {{ blogpost.article | raw }}</p>


