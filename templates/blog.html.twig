{% extends 'base.html.twig' %}

{% block body %}

    <h1>Search</h1>
    <form action="/blogs/search" method="GET">

        <input type="text" name="searchTerm" value="" placeholder="search..."> <br>

        <input type="submit" value="SEARCH">
    </form>


    <h2>Categories</h2>
    <ul>
        {% for  cat in cats %}
            <li><a href="/blogs/{{ cat.id }}">{{ cat.name }}</a></li>



        {% endfor %}
    </ul>

    <h2>Featured Blogs</h2>
    {% for  blog in blogs %}
        <ul>
            <li> {{ blog.id }}</li>
            <li> {{ blog.category.name }}</li>
            <li><a href="blog/{{ blog.id }}-{{ blog.title }}">{{ blog.title }}</a></li>
            <li> {{ blog.article | raw | slice(0, 80) ~ '...'}}</li>
        </ul>
    {% endfor %}
    <div class="navigation">
        {{ knp_pagination_render(blogs) }}
    </div>
{% endblock %}