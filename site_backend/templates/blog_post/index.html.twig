{% extends 'base.html.twig' %}

{% block title %}{{ blogpost.title }} - Nafisul Bari's Blog{% endblock %}

{% block keywords %}{{ blogpost.title | replace({' ':',','.':''}) | lower }}{% endblock %}

{% block description %}{{ blogpost.article | striptags| slice(0,140) | raw }}{% endblock %}

{% block cano %}<link rel="canonical" href="https://nafisulbari.com/blog/{{ blogpost.id }}-{{ blogpost.title | replace({' ':'-','.':''}) | lower}}"/>{% endblock %}

    {% block search %}
        <div class="form-group" id="search-bar"><label for="search-field"><i
                        class="fa fa-search"></i></label><input
                    class="form-control search-field" type="search" name="searchTerm"></div>
    {% endblock %}

{% block body %}


    <div>
        <div class="container">
            <div class="row">
                <div class="col-md-12" id="article-cont">
                    <div id="article-info">
                        <h1 id="article-title">{{ blogpost.title }}&nbsp;<br>
                        </h1>
                        <p id="article-date">
                            <span id="icon-span"><i class="fa fa-calendar-o d-inline"></i></span>&nbsp; {{ blogpost.dateCreated |date("d F Y") }}
                        </p>
                        <h2 id="article-author"><span
                                    id="icon-span"><i class="fa fa-user-circle"></i></span>&nbsp;
                            Ahmed Nafisul Bari</h2>
                    </div>
                    <div id="cover2-div"><img alt="Blog Cover Image" class="img-fluid"
                                              src="https://source.unsplash.com/random/1140x400/"
                                {#                                              src="{{ asset('assets/cover/') ~blogpost.id~".jpg" }}"#}
                                              id="cover2"></div>
                    <div class="d-block blogpost-article" id="article">

                        <div id="article-para">{{ blogpost.article| raw }}
                        </div>
                        <div id="disqus_thread"></div>

                    </div>
                </div>
            </div>
        </div>

    </div>

    <footer id="footer">
        <h3 class="text-center" id="footer-tag">Â© 2020, Nafisul Bari</h3>
    </footer>
