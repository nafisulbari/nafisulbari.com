{% extends 'base.html.twig'%}

{% block body %}







    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="row dashboard" id="blogs">
                    <button class="btn btn-secondary btn-block"><a style="color: white; text-decoration: none" href="/dashboard">Dashboard</a></button>
                </div>
                <div class="row dashboard">
                    <button class="btn btn-secondary btn-block"><a style="color: white; text-decoration: none" href="/dashboard/category">Category</a></button>
                </div>
                <div class="row dashboard">
                    <button class="btn btn-secondary btn-block"><a style="color: white; text-decoration: none" href="/dashboard/createblogpost">Create Post</a></button>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="row" id="blogs"></div>

                <h2>Categories &nbsp; &nbsp;<button class="btn btn-primary"><a style="color: white; text-decoration: none; font-size: 18px" href="/dashboard/category/create">Create category</a></button></h2>
                <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>CATEGORY</th>
                        <th>EDIT</th>
                        <th>DELETE</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for  cat in cats %}
                    <tr>
                        <td>{{ cat.id }}</td>
                        <td>{{ cat.name }}</td>
                        <td><a href="/dashboard/category/edit/{{ cat.id }}">edit</a></td>
                        <td><a style="color: red" href="/dashboard/category/delete/{{ cat.id }}" onclick="return confirm('Are you sure you want to delete this category?');">delete</a></td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>


            </div>
        </div>
    </div>












{% endblock %}